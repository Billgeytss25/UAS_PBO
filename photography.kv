<HomeScreen>:    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Photography Services'
            font_size: 32
            size_hint_y: 0.2
        Button:
            text: 'About Us'
            on_press: app.root.current = 'about'
        Button:
            text: 'Our Services'
            on_press: app.root.current = 'services'
        Button:
            text: 'Jobs'
            on_press: app.root.current = 'jobs'
        Button:
            text: 'Sign Up'
            on_press: app.root.current = 'signup'
        Button:
            text: 'Log In'
            on_press: app.root.current = 'login'

<AboutScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'About Us\n\nHubungi kami di 087709165374'
            font_size: 24
            halign: 'center'
        Button:
            text: 'Back to Home'
            on_press: app.root.current = 'home'

<ServicesScreen>:
    BoxLayout:
        orientation: 'vertical'
